<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar Patron de Movimientos"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="19dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaciar Patron"
        android:id="@+id/buttonVaciar"
        android:onClick="vaciarPatron"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar Patron"
        android:id="@+id/buttonAceptar"
        android:onClick="aceptarPatron"
        android:layout_below="@+id/buttonVaciar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese nueva palabra clave"
        android:id="@+id/titleVoice"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabra Clave"
        android:id="@+id/textPalabra"
        android:layout_marginTop="53dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/titleVoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar Palabra Clave"
        android:id="@+id/buttonAceptarPalabra"
        android:layout_below="@+id/textPalabra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="aceptarPalabra" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonListen"
        android:layout_alignTop="@+id/textPalabra"
        android:layout_toRightOf="@+id/buttonAceptar"
        android:longClickable="true"
        android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
        android:backgroundTint="#323bb8"
        android:layout_alignRight="@+id/titleVoice"
        android:layout_alignEnd="@+id/titleVoice" />
</RelativeLayout>
